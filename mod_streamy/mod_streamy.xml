<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade" >
  <name>Streamy Module</name>
  <author>Lars Hildebrandt</author>
  <creationDate>18.03.2015</creationDate>
  <copyright>Lars Hildebrandt</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <authorEmail>info@larshildebrandt.de</authorEmail>
  <authorUrl>www.larshildebrandt.de</authorUrl>
  <version>0.2</version>
  <description>Module to display streams</description>
  <languages>
    <language tag="en-GB">language/en-GB.mod_streamy.ini</language>
	<language tag="en-GB">language/en-GB.mod_streamy.sys.ini</language>
    <language tag="de-DE">language/de-DE.mod_streamy.ini</language>
	<language tag="de-DE">language/de-DE.mod_streamy.sys.ini</language>
  </languages>
  <files>
    <filename module="mod_streamy">mod_streamy.php</filename>
    <filename module="mod_streamy">index.html</filename>
    <filename module="mod_streamy">tmpl/default.php</filename>
    <filename module="mod_streamy">tmpl/index.html</filename>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic" addfieldpath="/administrator/components/com_streamy/models/fields">
        <field
          name="channelid"
          type="channel"
          label="MOD_STREAMY_SELECT_CHANNEL"
          required="true"
          description="MOD_STREAMY_SELECT_CHANNEL_DESC" />
        <field
          name="width"
          type="text"
          label="MOD_STREAMY_CHANNEL_WIDTH_LABEL"
          description="MOD_STREAMY_CHANNEL_WIDTH_DESC"
          size="40"
          class="inputbox"
          required="false"		/>
        <field
          name="height"
          type="text"
          label="MOD_STREAMY_CHANNEL_HEIGHT_LABEL"
          description="MOD_STREAMY_CHANNEL_HEIGHT_DESC"
          size="40"
          class="inputbox"
          required="false"		/>
      </fieldset>
		<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>	  
    </fields>
  </config>
</extension>
